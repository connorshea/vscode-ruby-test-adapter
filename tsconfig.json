{
  "compilerOptions": {
    "target": "es2022",
    "lib": [ "es2022" ],
    "module": "commonjs",
    "outDir": "out",
    "importHelpers": true,
    "sourceMap": true,
    "rootDirs": ["src", "test"],
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true
  },
}
